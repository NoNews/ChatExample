<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/light_background</item>
    </style>


    <style name="TouchEffect">
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="BoilerPlate">
        <!-- Customize your theme here. -->
        <item name="android:background">@null</item>
    </style>


    <style name="StandartBlackHeader" parent="StandartText">
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="StandartText">
        <item name="android:textSize">@dimen/standart_text_size</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>


    <style name="WhiteLargeBoldText" parent="LargeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteStandartBoldText" parent="StandartText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="WhiteStandartText" parent="StandartText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteSmallText" parent="SmallText">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="StandartButton" parent="StandartText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/activity_small_margin</item>
        <item name="android:paddingStart">@dimen/activity_small_margin</item>
    </style>

    <style name="MessageTextInput">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/activity_small_margin</item>
        <item name="android:paddingStart">@dimen/activity_small_margin</item>
    </style>


</resources>
